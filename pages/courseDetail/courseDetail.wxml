<!--pages/courseDetail/courseDetail.wxml-->
<view class="cu-bar bg-white solid-bottom">
  <view class='action title-style-3'>
    <text class='text-xl text-bold'>{{info.name}}</text>
    <text class='text-Abc text-gray self-end margin-left-sm'>{{info.teacher}} {{info.location}}</text>
  </view>
</view>
<view class="cu-list grid col-4">
  <view class="cu-item"  wx:for="{{iconList}}" wx:key="{{item.name}}" bindtap="tapIcon" id="{{item.name}}">
    <view class='icon-{{item.icon}} text-{{item.color}}'>
    </view>
    <text>{{item.name}}</text>
  </view>
</view>
<view class="cu-timeline">
  <view class="cu-time" wx:if="{{isLive}}">现在</view>
  <view class="cu-item cur icon-noticefill text-red" wx:if="{{isLive}}">
    <view class="content bg-red light shadow-blur">
      <text>直播中...</text>
    </view>
  </view>
</view>
<view wx:for="{{videoList}}" wx:key="{{item.date}}">
  <view class="cu-timeline">
  <view class="cu-time">{{item.date}}</view>
    <view wx:for="{{item.videos}}" wx:for-item="course" wx:key="{{course.videoID}}" class="cu-item">
      <view wx:if="{{course.isWatch}}" class="content" data-id="{{course.id}}" data-name="{{course.name}}" data-url="{{course.url}}" bindtap="tapCourse">
      {{course.name}}
      </view>
      <view wx:else class="content bg-orange light"  data-id="{{course.id}}" data-name="{{course.name}}" data-url="{{course.url}}" bindtap='tapCourse'>
      {{course.name}}
      </view>
    </view>
  </view>
</view>