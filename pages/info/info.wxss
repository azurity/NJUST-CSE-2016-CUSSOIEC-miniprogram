/* pages/info/info.wxss */
@import "../../component/colorUI/colorui.wxss";
@import "../../component/colorUI/icon.wxss";

.userinfo {  
  position: relative;  
  width: 750rpx;  
  color: #333;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 50rpx 20rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}