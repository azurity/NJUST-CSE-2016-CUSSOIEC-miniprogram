<!--pages/checkInControl/checkInControl.wxml-->
<view class="padding flex flex-direction">
  <button class="cu-btn bg-green lg light" bindtap="toggleState" loading="{{loading}}" disabled="{{loading}}">{{isOpen?'结束签到':'开放签到'}}</button>
</view>
<view class="cu-list menu">
  <view class="cu-item" wx:for="{{list}}" wx:key>
    <view class="content">
      <text class="text-black">{{item.time}}</text>
      <view class="text-grey text-sm">
        <text>{{item.count}}人</text>
      </view>
    </view>
    <view class="action">
      <button class="cu-btn round line-green" data-time="{{item.time}}" bindtap="deleteItem">
        <text class="icon-delete"> 删除</text>
      </button>
    </view>
  </view>
</view>
<view wx:if="{{listLoading}}" class="loader">
  <view class="square-spin">
    <view></view>
  </view>
</view>