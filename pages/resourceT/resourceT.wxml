<!--pages/resourceT/resourceT.wxml-->
<view class="cu-bar bg-white solid-bottom">
  <view class='action title-style-3'>
    <text class='icon-circlefill text-olive'></text>
    <text class='text-xl text-bold'>配套资源</text>
  </view>
  <view class='action'>
    <button class='cu-btn line-cyan shadow round' bindtap='uptap'>
      <text class='icon-upload'></text>
     上传</button>
  </view>
</view>
<view class="cu-list menu menu-avatar">
  <view class="cu-item" wx:for="{{resourceList}}">
    <view class="cu-avatar radius lg icon-file text-blue"></view>
    <view class='content'>
      <view class='text-grey'>{{item.name}}</view>
      <view class='text-gray text-sm' wx:if="{{!item.isDownLoad}}">
        <text class='icon-infofill text-red'></text>未下载
      </view>
      <view class='text-gray text-sm' wx:else>
        <text class='icon-roundcheckfill text-green'></text>
      </view>
    </view>
    <view class='action'>
      <button class='cu-btn round bg-olive shadow' bindtap='downtap' data-name="{{item.name}}" data-url="{{item.url}}" data-index="{{index}}">
        <text class='icon-down'></text> 下载</button>
    </view>
  </view>
  <view class='flex-sub text-center'>
      <view class='solid-bottom text-sm padding'>
      </view>
      <text class='text-grey'>下面没有啦</text>
    </view>
</view>

<view class='cu-load load-modal' wx:if="{{loadModal}}"> 
    <!-- <view class='icon-emojifill text-orange'></view> -->
    <view class='gray-text'>正在下载...</view>
</view>
